extends ../auth-layout


block content
    .content-wrapper
        // Content area
        .content.d-flex.justify-content-center.align-items-center
            // Login form
            form.login-form#login(action='/auth/login-user' method="post")
                .card.mb-0
                    .card-body
                        .text-center.mb-3
                            i.icon-reading.icon-2x.text-slate-300.border-slate-300.border-3.rounded-round.p-3.mb-3.mt-1
                            h5.mb-0 Login to your account
                            span.d-block.text-muted Your credentials
                            if(err)
                                .alert.alert-warning.alert-dismissible
                                    a.close(type='button', data-dismiss='alert')
                                        span Ã—

                                    span Invalid User or Password! 
                        .form-group.form-group-feedback.form-group-feedback-left
                            input.form-control(type='text', placeholder='Username' name="username")
                            .form-control-feedback
                                i.icon-user.text-muted
                        .form-group.form-group-feedback.form-group-feedback-left
                            input.form-control(type='password', placeholder='Password' name="password")
                            .form-control-feedback
                                i.icon-lock2.text-muted
                        .form-group.d-flex.align-items-center
                            .form-check.mb-0
                                label.form-check-label
                                    input.form-input-styled(type='checkbox', name='remember', checked='', data-fouc='')
                                    | 										Remember
                            a.ml-auto(href='login_password_recover.html') Forgot password?
                        .form-group
                            button.btn.btn-primary.btn-block(type='submit')
                                | Sign in 
                                i.icon-circle-right2.ml-2
